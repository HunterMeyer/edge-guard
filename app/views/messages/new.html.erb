<%= provide(:title, 'Contact Us') %>
<div class='container'>
  <div class='row'>
    <div class='col l6 offset-l3 m8 offset-m2 s12'>
      <div class='row'>
        <div class='col s12'>
          <h4 class='center-align'>Contact Robert<b>Scott</b> </h4>
          <div class='card'>
            <div class='card-content'>
              <small class='block grey-text text-lighten-1 center-align'>All Fields Required</small>
              <%= form_for @message do |f| %>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-action-account-circle active prefix'></i>
                    <%= f.text_field :name, autofocus: true %>
                    <%= f.label      :name, 'Full Name', class: 'active' %>
                  </div>
                </div>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-communication-email prefix'></i>
                    <%= f.email_field :email %>
                    <%= f.label       :email %>
                  </div>
                </div>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-editor-insert-comment prefix'></i>
                    <%= f.text_area :body, rows: 4, class: 'materialize-textarea' %>
                    <%= f.label     :body, 'Message' %>
                  </div>
                </div>
                <div class='row'>
                  <div class='col s12 right-align'>
                    <%= button_tag icon('send', 'Send'), type: 'submit', class: 'waves-effect waves-light btn red' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
