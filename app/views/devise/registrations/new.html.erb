<%= provide(:title, 'Sign Up') %>
<div class='container'>
  <div class='row'>
    <div class='col l6 offset-l3 m8 offset-m2 s12'>
      <div class='row'>
        <div class='col s12'>
          <h4 class='center-align'>Sign Up</h4>
          <div class='card'>
            <div class='card-content'>
              <%= form_for resource, as: resource_name, url: registration_path(resource_name), remote: true do |f| %>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-action-account-circle active prefix'></i>
                    <%= f.text_field :first_name, autofocus: true %>
                    <%= f.label      :first_name, 'Your Name', class: 'active' %>
                  </div>
                </div>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-communication-email prefix'></i>
                    <%= f.email_field :email %>
                    <%= f.label       :email %>
                  </div>
                </div>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-action-lock prefix'></i>
                    <%= f.password_field :password, autocomplete: 'off' %>
                    <%= f.label          :password, 'Password (min. 8 characters)' %>
                  </div>
                </div>
                <div class='row'>
                  <div class='col s12 right-align'>
                    <%= button_tag 'Sign Up', type: 'submit', class: 'waves-effect waves-light btn red' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class='center-align'><small>Already a member? <%= link_to 'Sign in', new_user_session_path %></small></div>
        </div>
      </div>
    </div>
  </div>
</div>
