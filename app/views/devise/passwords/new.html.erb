<% provide(:title, 'Password Reset') %>
<div class='container'>
  <div class='row'>
    <div class='col l6 offset-l3 m8 offset-m2 s12'>
      <div class='row'>
        <div class='col s12'>
          <h4 class='center-align'>Password Reset</h4>
          <div class='card'>
            <div class='card-content'>
              <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
                <div class='row'>
                  <div class='input-field col s12'>
                    <i class='mdi-communication-email active prefix'></i>
                    <%= f.email_field :email, autofocus: true %>
                    <%= f.label       :email, class: 'active' %>
                  </div>
                </div>
                <div class='row'>
                  <div class='col s12 right-align'>
                    <%= button_tag 'Send Instructions', type: 'submit', class: 'waves-effect waves-light btn orange' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class='center-align'>
            <small class='block'>Remembered your password? <%= link_to 'Sign in', new_user_session_path %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
